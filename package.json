{
  "name": "mu",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "start:server": "yarn workspace @mu/server start",
    "start:web": "yarn workspace @mu/web start",
    "start:dev": "concurrently -n web,server --kill-others \"yarn start:web\" \"yarn start:server\"",
    "dev:web": "concurrently -n web,server --kill-others \"yarn start:web\" \"yarn start:server\""
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "@types/node": "^12.7.3",
    "@types/graphql": "^14.5.0",
    "@types/styled-components": "^4.1.19",
    "typescript": "^3.6.2"
  }
}