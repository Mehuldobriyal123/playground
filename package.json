{
  "name": "playground",
  "version": "0.1.0",
  "description": "Playground using React, Emotion, Relay, GraphQL, MongoDB.",
  "private": true,
  "author": "Leonardo Maldonado <leonardomso11@gmail.com>",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "web:dev": "yarn workspace @playground/web dev",
    "web:start": "yarn workspace @playground/web start",
    "web:build": "yarn workspace @playground/web build",
    "web:test": "yarn workspace @playground/web test",
    "web:lint": "yarn workspace @playground/web lint",
    "web:format": "yarn workspace @playground/web format",
    "web:relay": "yarn workspace @playground/web relay",
    "server:start": "yarn workspace @playground/server start",
    "server:build": "yarn workspace @playground/graphql build && yarn workspace @playground/server build",
    "server:test": "yarn workspace @playground/server test",
    "server:lint": "yarn workspace @playground/server lint",
    "server:format": "yarn workspace @playground/server format",
    "graphql:build": "yarn workspace @playground/graphql build",
    "lint:staged": "lint-staged",
    "build": "yarn workspace @playground/web build & yarn workspace @playground/server build",
    "test": "yarn workspace @playground/web test & yarn workspace @playground/server test",
    "update-schema": "yarn workspace @playground/server update-schema",
    "relay": "yarn workspace @playground/web relay"
  },
  "devDependencies": {
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "now": "^19.0.1",
    "prettier": "^2.1.2",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^5.0.0",
    "typescript": "^4.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint:staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "yarn lint",
      "git add"
    ]
  },
  "dependencies": {
    "lerna": "^3.22.1"
  }
}
