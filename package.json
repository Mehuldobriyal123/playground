{
    "name": "mu",
    "private": true,
    "workspaces": {
      "packages": [
        "packages/*"
      ],
      "nohoist": [
        "**/styled-components",
        "**/styled-components/**"
      ]
    },
    "scripts": {
      "server": "yarn workspace @mu/server start",
      "web": "yarn workspace @mu/web start",
      "dev": "concurrently -n web,server --kill-others \"yarn web\" \"yarn server\"",
      "dev:web": "concurrently -n web,server --kill-others \"yarn web\" \"yarn server\"",
      "test:web": "yarn workspace @mu/web test",
      "test:server": "yarn workspace @mu/server test",
      "precommit": "yarn lint-staged"
    },
    "devDependencies": {
      "concurrently": "^4.1.0",
      "lint-staged": "^8.1.5",
      "prettier": "^1.16.4",
      "typescript": "^3.4.3"
    },
    "lint-staged": {
      "*.{js,ts}": [
        "eslint --fix --ext js,ts",
        "prettier --write",
        "git add"
      ],
      "*.{jsx,tsx,json}|*rc|*config": [
        "prettier --write",
        "git add"
      ]
    },
    "husky": {
      "hooks": {
        "pre-commit": "yarn precommit"
      }
    }
  }