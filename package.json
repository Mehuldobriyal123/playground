{
  "name": "mu",
  "version": "1.0.0",
  "description": "Best boilerplate for GraphQL projects.",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/styled-components",
      "**/styled-components/**"
    ]
  },
  "scripts": {
    "dev:web": "yarn workspace @mu/web start",
    "dev:server": "yarn workspace @mu/server start",
    "test:web": "yarn workspace @mu/web test",
    "test:server": "yarn workspace @mu/server test",
    "clean": "yarn workspaces run clean",
    "format": "yarn workspaces run format",
    "lint": "yarn workspaces run lint"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "graphql": "^14.5.4",
    "styled-components": "^5.0.1"
  },
  "devDependencies": {
    "concurrently": "4.1.0",
    "cross-env": "5.2.0",
    "husky": "1.3.1",
    "lint-staged": "8.1.5",
    "now": "16.2.0",
    "prettier": "1.16.4",
    "tslint": "5.14.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-react": "3.6.0",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn workspace @mu/web && lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
