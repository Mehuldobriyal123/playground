{
  "name": "mu",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/styled-components",
      "**/styled-components/**"
    ]
  },
  "scripts": {
    "web": "yarn workspace @mu/web start",
    "server": "yarn workspace @mu/server start",
    "dev": "concurrently -n web,server --kill-others \"yarn web\" \"yarn server\"",
    "dev:web": "concurrently -n web,server --kill-others \"yarn web\" \"yarn server\"",
    "generate:web": "yarn workspace @mu/web generate",
    "generate:server": "yarn workspace @mu/server generate"
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "@types/node": "^12.7.3",
    "@types/graphql": "^14.5.0",
    "@types/styled-components": "^4.1.19",
    "typescript": "^3.6.2"
  }
}