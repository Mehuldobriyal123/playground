{
  "name": "mu",
  "version": "1.0.0",
  "description": "Best boilerplate for GraphQL projects.",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/styled-components",
      "**/styled-components/**"
    ]
  },
  "scripts": {
    "dev:web": "yarn workspace @mu/web start",
    "dev:server": "yarn workspace @mu/server start",
    "test:web": "yarn workspace @mu/web test",
    "test:server": "yarn workspace @mu/server test",
    "clean": "yarn workspaces run clean",
    "format": "yarn workspaces run format",
    "lint": "yarn workspaces run lint"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "graphql": "^14.5.4",
    "styled-components": "^5.0.1"
  },
  "devDependencies": {
    "concurrently": "4.1.0",
    "cross-env": "5.2.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.10",
    "now": "^19.1.1",
    "prettier": "^2.0.5",
    "tslint": "^6.1.2",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^5.0.0",
    "typescript": "^3.9.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint:staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ],
    "*.tsx": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ]
  }
}
