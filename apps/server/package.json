{
  "name": "server",
  "version": "1.0.0",
  "main": "index.js",
  "author": "leonardomso",
  "license": "MIT",
  "scripts": {
    "pull": "dotenv -e .env.development prisma db pull",
    "push": "dotenv -e .env.development prisma db push",
    "start": "ts-node-dev --transpile-only --no-notify ./src/index.ts",
    "build": "tsc",
    "generate": "yarn generate:prisma && yarn generate:schema",
    "generate:schema": "ts-node --transpile-only src/utils/buildSchema.ts",
    "generate:prisma": "prisma generate",
    "lint": "eslint",
    "format": "prettier --write src",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf .turbo && rm -rf node_modules"
  },
  "dependencies": {
    "@envelop/core": "^3.0.4",
    "@envelop/disable-introspection": "^4.0.4",
    "@envelop/graphql-jit": "^5.0.4",
    "@envelop/parser-cache": "^5.0.4",
    "@envelop/response-cache": "^4.0.4",
    "@envelop/validation-cache": "^5.0.4",
    "@fastify/cors": "^8.2.0",
    "@pothos/core": "^3.23.1",
    "@pothos/plugin-errors": "^3.9.0",
    "@pothos/plugin-prisma": "^3.38.0",
    "@pothos/plugin-relay": "^3.30.0",
    "@pothos/plugin-scope-auth": "^3.16.0",
    "@pothos/plugin-simple-objects": "^3.6.7",
    "@pothos/plugin-smart-subscriptions": "^3.6.7",
    "@pothos/plugin-tracing": "^0.5.7",
    "@pothos/plugin-validation": "^3.8.7",
    "@prisma/client": "^4.7.1",
    "@sendgrid/mail": "^7.7.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.1",
    "dotenv": "^16.0.3",
    "fastify": "^4.10.2",
    "graphql": "^16.6.0",
    "graphql-helix": "^1.13.0",
    "graphql-playground-html": "^1.6.30",
    "graphql-relay": "^0.10.0",
    "graphql-scalars": "^1.20.1",
    "graphql-subscriptions": "^2.0.0",
    "jsonwebtoken": "^8.5.1",
    "stellate": "^1.17.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "^1.19.2",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/node": "^18.11.15",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "eslint": "^8.29.0",
    "eslint-config-xo": "^0.43.1",
    "prisma": "^4.7.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.4"
  },
  "prisma": {
    "schema": "prisma/schema.prisma"
  }
}
